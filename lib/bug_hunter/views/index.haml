-title "List of Errors"

-content_for :header do
  %div{:"data-role" => "navbar"}
    %ul
      %li
        %a(href="/?resolved=1")
          Resolved
      -(BugHunter::Project.instance.members||[]).each do |member|
        %li
          %a(href="/?assignee=#{member}")
            &=member


-content_for :body do
  =list_view(@errors, :filter => true) { |error| [error_path(error), h(error.message)] }

